<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--                       AppToolBar                       -->
    <style name="AppToolBar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/AppTextTitle.23sp</item>
    </style>

    <!--                       Navigation                       -->
    <style name="AppToolBar.Navigation">
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppToolBar.ImageNavigation">
        <item name="android:background">@color/transparency</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <!--                       AppTextTitle                       -->
    <style name="AppTextTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle.15sp">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTextTitle.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextTitle.23sp">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="AppTextTitle.30sp">
        <item name="android:textSize">30sp</item>
    </style>

    <!--                       AppTextBody                       -->
    <style name="AppTextBody">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextBody.10sp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTextBody.15sp">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTextBody.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextBody.30sp">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="btnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textAppearance">@style/AppTextTitle.18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>